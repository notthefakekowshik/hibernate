package uiPack;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

import servicesPack.CustomerService;
import servicesPack.OrderService;
import servicesPack.ProductService;
import serviceImplPack.CustomerServiceImpl;
import serviceImplPack.OrderServiceImpl;
import serviceImplPack.ProductServiceImpl;
import beansPack.Customer;


public class EcomUI {
	public static void showMenu()
	{
		
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		CustomerServiceImpl cs =  new CustomerServiceImpl();
		List<Customer> customerObjects = new ArrayList<Customer>();
		Scanner sc = new Scanner(System.in);
		while(true)
		{
			System.out.println("1.Enter 1 if you are a new user and 2 if you are an old customer");
			int option = sc.nextInt();
			try
			{
				if(option == 1)
				{					
					Customer currObj = cs.addNewCustomer();
					if(currObj!=null)
					{
						customerObjects.add(currObj);
					}
				}
				else if(option ==2)
				{
					boolean isLoggedIn = cs.customerLogin();
					if(isLoggedIn)
					{
						showMenu();
					}
					else
					{
						System.out.println("Cant login");
					}
				}
				else
				{
					System.out.println("Thank you for shopping, bye!");
					break;
				}
			}
			catch(Exception e)
			{
				System.out.println(e+" bye");
			}
		}
			
	}
}
